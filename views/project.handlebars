<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  
  <form class="form new-comment-form">
    <div class="form-group">
      <label for="comment-desc">description:</label>
      <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Comment</button>
    </div>
  </form>

  <div class="row mb-4 comment">
      <div class="col-md-5">
        <p>Created by (user.name) on (date_create)</p>
      </div>
      <div class="col-md-7">
        <p>
          comment.description
        </p>
      </div>
  </div>


  {{#if comments.length}}
  <div class="col-md-6 comment-list">
    <h3>Current Posts:</h3>

    {{#each comments as |comment|}}
    <div class="row mb-4 comment">
      
      <div class="col-md-9">
        <p>
          {{comment.description}}
        </p>
      </div>

      <div class="col-md-3">
        <p>Created by {{comment.user.name}} on {{format_date comment.date_created}}</p>
      </div>

    </div>
    {{/each}}

  </div>
  {{/if}}

</div>

<script src="./js/profile.js"></script>
