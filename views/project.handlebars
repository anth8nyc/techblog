<div class="text-center">
  <div class="row">
    <div class="col-md-8">
      <h2>{{name}}  {{{get_emoji}}}</h2>
      {{!-- <p>{{{get_emoji}}}</p> --}}
      <p>Written by {{user.name}} on {{format_date date_created}}</p>
      <p>{{description}}</p>
    </div>
    <div class="col-md-4">
      <form class="form new-comment-form">
        <div class="form-group">
          <label for="comment-desc">comment:</label>
          <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
        </div>
        <div class="form-group">
         <button type="submit" class="btn btn-primary">submit</button>
        </div>
      </form>
    </div>
  </div>


  {{#if comments.length}}
  <div class="col-md-12 mt-4 comment-list c-box">
    <h3>Comments</h3>

    {{#each comments as |comment|}}
    <div class="row mb-2">
      
      <div class="col-md-9 text-left">
        <p>
          {{comment.description}}
        </p>
      </div>

      <div class="col-md-2">
        <p>{{comment.user_name}} on {{format_date comment.date_created}}</p>
      </div>
      <div class="col-md-1">
        <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
      </div>
  
    </div>
    {{/each}}
  </div>
  {{/if}}



</div>

<script src="/js/post.js"></script>
